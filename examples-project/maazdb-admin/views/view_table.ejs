<!DOCTYPE html>
<html>
<head>
    <title><%= tablename %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container-fluid p-4">
    <nav aria-label="breadcrumb"><ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/databases">Databases</a></li>
        <li class="breadcrumb-item"><a href="/db/<%= dbname %>"><%= dbname %></a></li>
        <li class="breadcrumb-item active"><%= tablename %></li>
    </ol></nav>

    <% if(queryError) { %> <div class="alert alert-danger"><%= queryError %></div> <% } %>

    <div class="row">
        <div class="col-md-3">
            <div class="card mb-3">
                <div class="card-header bg-dark text-white">Structure</div>
                <table class="table table-sm mb-0">
                    <thead><tr><% structure.headers.forEach(h => { %> <th><%= h %></th> <% }) %></tr></thead>
                    <tbody>
                        <% structure.data.forEach(row => { %>
                            <tr><% row.forEach(cell => { %> <td><%= cell %></td> <% }) %></tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <div class="card">
                <div class="card-header bg-primary text-white">SQL Console</div>
                <div class="card-body">
                    <form action="/query" method="POST">
                        <input type="hidden" name="dbname" value="<%= dbname %>">
                        <input type="hidden" name="tablename" value="<%= tablename %>">
                        <textarea name="sql" class="form-control mb-2" rows="5" placeholder="INSERT INTO... (INSERT INTO js_users (name) VALUES ('Maaz');)"></textarea>
                        <button class="btn btn-success w-100">Execute</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <span>Data Rows</span>
                    <span class="badge bg-secondary"><%= data.data.length %> rows</span>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover table-bordered mb-0">
                        <thead class="table-light">
                            <tr><% data.headers.forEach(h => { %> <th><%= h %></th> <% }) %></tr>
                        </thead>
                        <tbody>
                            <% data.data.forEach(row => { %>
                                <tr><% row.forEach(cell => { %> <td><%= cell %></td> <% }) %></tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>